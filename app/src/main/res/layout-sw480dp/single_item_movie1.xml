<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/linLayoutItem">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/cardViewColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:contentDescription="@string/poster_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/details_activty_margin_left_items">

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/textViewTitleItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:text="@string/title_text"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewVoteAverage"
                    android:drawableLeft="@drawable/star48"
                    android:drawablePadding="20dp"
                    android:text="@string/votes_text"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_marginTop="25dp" />

            </LinearLayout>

         </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>